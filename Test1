SPSS.VH_SAL_OA=[PSD_SAL_OA.Delta(:,5), PSD_SAL_OA.Theta(:,5) PSD_SAL_OA.Beta(:,5), PSD_SAL_OA.LowGamma(:,5), PSD_SAL_OA.HighGamma(:,5)];

